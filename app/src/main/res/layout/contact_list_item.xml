<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/id_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/head"
        android:background="#000000"
        android:contentDescription="头像"
        />
    <TextView
        android:id="@+id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/id_avatar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:text="名 字"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/id_phone"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/id_name"
        android:layout_below="@+id/id_name"
        android:text="手机号" />

    <TextView
        android:id="@+id/id_sex"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/id_phone"
        android:layout_alignTop="@id/id_phone"
        android:layout_marginStart="20dp"
        android:text="性 别"
        />
    <CheckBox
        android:id="@+id/id_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        />
</RelativeLayout>